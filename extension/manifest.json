{
  "manifest_version": 2,
  "name": "OpenCue",
  "version": "0.1.0",
  "description": "Cue-based playback overlays for family viewing",

  "permissions": [
    "activeTab",
    "storage",
    "*://*.netflix.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "OpenCue"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "web_accessible_resources": [
    "icons/*"
  ]
}
